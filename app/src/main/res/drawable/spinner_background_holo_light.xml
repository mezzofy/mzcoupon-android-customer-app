<?xml version="1.0" encoding="utf-8"?>
<selector android:layout_width="wrap_content"
    android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"
        android:drawable="@drawable/apptheme_spinner_disabled_holo_dark" />
    <item android:state_pressed="true"
        android:drawable="@drawable/apptheme_spinner_pressed_holo_dark" />
    <item android:state_pressed="false" android:state_focused="true"
        android:drawable="@drawable/apptheme_spinner_focused_holo_dark" />
    <item android:drawable="@drawable/apptheme_spinner_default_holo_dark" />
</selector>