<?xml version="1.0" encoding="utf-8"?><!-- Definig a container for you List Item-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout android:id="@+id/filter_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imageView9"
        android:src="@drawable/info" />

    <TextView
        android:id="@+id/list_content"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:text="sample"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:gravity="right|center_vertical"
        android:text="Medium Text"
        android:textColor="#000000"
        android:textSize="13sp" android:layout_weight="1"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:visibility="visible"
        android:src="@drawable/ic_action_next_item" />

    </LinearLayout>

    <LinearLayout android:id="@+id/linearlist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_below="@+id/filter_content">

        <TextView  android:id="@+id/itemlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="sample"
            android:textColor="@color/black"
            android:textSize="13sp">
        </TextView>

    </LinearLayout>

</RelativeLayout>